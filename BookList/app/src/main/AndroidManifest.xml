<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="by.ansgar.android.booklist"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_book_list"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".BookListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".BookPagerActivity"
            android:label="Book"
            android:parentActivityName=".BookListActivity"></activity>
        <activity android:name=".BookAddActivity"
                  android:label="Add book"
                  android:parentActivityName=".BookListActivity"></activity>
    </application>

</manifest>
